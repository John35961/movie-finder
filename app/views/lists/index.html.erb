<div class="container my-4 p-3">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-lg-8">
      <div class="pb-3 d-flex justify-content-between border-bottom">
        <h1><%= @lists.length %> lists</h1>
      </div>
      <div class="grid my-3">
          <% @lists.each do |list| %>
            <%= link_to list_path(list), class: "text-dark text-decoration-none" do %>
              <% if list.banner.attached? %>
                <div class="d-flex justify-content-between align-items-center p-3 mb-1 text-light shadow-sm rounded" style="background-image: linear-gradient(rgba(0,0,0,0.75),rgba(0,0,0,0.75)), url(<%= cl_image_path(list.banner.key)%>); background-size: cover; background-position: center; height: 15vh;">
              <% else %>
                <div class="d-flex justify-content-between align-items-center p-3 mb-1 bg-light shadow-sm rounded" style="height: 15vh;">
              <% end %>
                  <span><strong><%= list.name %></strong></span>
                  <% if list.bookmarks.count.nonzero? %>
                    <% bookmark = list.bookmarks.count == 1 ? 'bookmark' : 'bookmarks' %>
                    <span><%= list.bookmarks.count %> <%= bookmark %></span>
                  <% end %>
                </div>
            <% end  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div
